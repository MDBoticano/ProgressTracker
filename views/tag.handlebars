  <!--Materialize Navbar Code-->
  <div class="navbar-fixed">
  <nav class="teal"> <!--change navbar background color here!-->
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">{{AppTitle}}</a>
      <a href="#" data-activates="mobile-demo" class="button-collapse" style="padding-left: 5px">
        <i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down"> <!-- full web page -->
        {{#each navLinks}}
          <li><a href="{{link}}">{{linkText}}</a></li>
        {{/each}}
      </ul>
      <ul class="side-nav" id="mobile-demo"> <!-- mobile -->
        <br>
        <br>
        {{#each navLinks}}
          <li><a href="{{link}}">{{linkText}}</a></li>
        {{/each}}
      </ul>
    </div>
  </nav>
  </div>  
  

  
  <!-- Tag Header -->
  <div class ="card">
    <div class="card-content center-align">
      <h5>Tag: {{curTag}}</h5>
    </div>
  </div>


  <!--List of templates based on tag -->
  
  <ul class="collapsible" data-collapsible="accordion">
    {{#each tagged}}
    <li >
      <div class="collapsible-header" style="padding: .5rem 1rem">    
        <img src="/images/{{icon}}.png" style="vertical-align: middle" height="35" width="35">  
        <span class="title" style="padding:8px"> {{title}} </span>
        <object class="material-icons secondary-content" style="padding-top:10px">keyboard_arrow_down</object>

      </div>
      <div class="collapsible-body">
        <!-- checkpoint list    -->
        <div class="row">
          <div class="col s12">
              
            <br>  
            <h6>{{description}}</h6>
            Checkpoints:
            <br>
            <br>
            <ul class="collection " id="checkpoints">

            {{#each checkpoints}}  
              <li class="collection-item" id="item_{{@index}}">{{checkpoint}}</li>
            {{/each}}
            </ul>
            <br>

            {{#each tags}}
            <a href="/tag/{{tag}}">
              <div class="chip">{{tag}}</div>
            </a>
            {{/each}}
              
            <a href="trackerCreator/{{title}}" class="btn waves-effect waves-light secondary-content" type="submit" name="action">Start</a>     
        </div>           
        </div>  
      </div>
    </li>
    {{/each}}

  </ul>



  





