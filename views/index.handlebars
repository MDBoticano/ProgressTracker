<!doctype html>

<html>
<head>
    <title>Progress Tracker</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
    <link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
    <!-- Materialize Template stuff (Material Design) coding thing-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
    <!--our css-->  
    <!--<link href="css/progressTracker.css" rel="stylesheet" >-->
    <link href="css/PTmat.css" rel="stylesheet">
  
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>

  <!--Materialize cards/collection-->
  <div class="navbar-fixed">
  <nav class="teal"> <!--change navbar background color here!-->
    <div class="nav-wrapper">
      <a href="#!" class="brand-logo">Progress Tracker</a>
      <a href="#" data-activates="mobile-demo" class="button-collapse">
        <i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li class="active"><a href="index.html">Home</a></li>
        <li><a href="profilePage.html">Profile</a></li>
        <li><a href="trackingPage.html">Tracker</a></li>

        <!-- log in page test -->
        <li><a href="login> Log In</a></li>
      
      </ul>
      <ul class="side-nav" id="mobile-demo">
        <br>
        <br>
        <li class="active"><a href="index.html">Home</a></li>
        <li><a href="profilePage.html">Profile</a></li>
        <li><a href="trackingPage.html">Tracker</a></li>

        <li><a href="login">Log In</a></li>

      </ul>
      
      
    </div>
  </nav>
  </div>  
  
  <!--location-->

  <div class="col s12 m7">
    <div class="card">
      <div class="card-image">
        <span class="card-title">Card Title</span>
      </div>
      <div class="card-content">
        <h5 class="center-align">{{location}}</h5>
        <a href="#!"><h6 class="center-align">Change Location</h6></a>
      </div>
    </div>
  </div>

  <!--activities list, make this JSON instead of hardcoded -->
  <ul class="collection">
    {{#each featuredTasks}}
    <li class="collection-item avatar">
      <i class="material-icons circle ">create</i>
      <span class="title">{{title}}</span>
      <br>
      <p>{{description}}</p>
      {{#each tags}}
        <div class="chip">{{tag}}</div>
      {{/each}}
      
      <a href="trackerCreator.html" class="secondary-content">
        <i class="material-icons">add</i>
      </a>
    </li>
    {{/each}}
  </ul>
  
  <!--when you hit the bottom of the page, allow room for last item-->
  <br>
  <br>
  <br>
  <br>
  
  <!--floating action button, leads to blank tracker creator  -->
  <div class="fixed-action-btn" style="bottom: 24px; right: 24px;">
    <a class="btn-floating btn-large red" href=trackerCreator.html>
      <i class="large material-icons">create</i>
    </a>
  </div>
   
  <!-- Javascripts -->
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <!-- Materialize js-->
  <script type="text/javascript" src="js/materialize.min.js"></script>
  <!-- own js-->
  <script src="js/progressTracker.js"></script>
  
</body>
</html>
