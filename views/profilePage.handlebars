  <!--Materialize Navbar Code-->
  <div class="navbar-fixed">
  <nav class="teal"> <!--change navbar background color here!-->
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Progress Tracker</a>
      <a href="#" data-activates="mobile-demo" class="button-collapse">
        <i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down"> <!-- full web page -->
        {{#each navLinks}}
          <li><a href="{{link}}">{{linkText}}</a></li>
        {{/each}}
      </ul>
      <ul class="side-nav" id="mobile-demo"> <!-- mobile -->
        <br>
        <br>
        {{#each navLinks}}
          <li><a href="{{link}}">{{linkText}}</a></li>
        {{/each}}
      </ul>
    </div>
  </nav>
  </div>  


<!-- profile-page-header -->
  <div id="profile-page-header" class="card">          
      <div class="card-content">
        <div class="row">                    
          <div class="col s12">     
            <center>                 
                <font size="5">{{currentUser.username}}</font>
                <br>
                <font size="2">{{currentUser.firstName}} {{currentUser.lastName}}</font>
                
                <figure class="card-profile-image">
                  <img src="./images/profilepic.png" width="100" height="100"  class="circle responsive-img activator">
                </figure>

                <i class="material-icons">assignment</i>120 Tasks Completed

                <!--
                <div>
  
