<!doctype html>

<html>
<head>
    <title>Progress Tracker</title> 
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      
      <!--<link href="css/bootstrap.min.css" rel="stylesheet"> -->
      <!--<link href="css/bootstrap-theme.min.css" rel="stylesheet"> -->
      
      <!-- Materialize Template stuff (Material Design) coding thing-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <link type="text/css" rel="stylesheet" href="/css/materialize.min.css"  media="screen,projection"/>
      
      <!--our css-->  
      <link rel="stylesheet" href="/css/PTmat.css"/>

      <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
      <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
      <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <![endif]-->        
</head>

<body>

	
  <!--Materialize Navbar Code-->
  <div class="navbar-fixed">
  <nav class="teal"> <!--change navbar background color here!-->
    <div class="nav-wrapper">
      <a href="/" class="brand-logo">Progress Tracker</a>
      <a href="#" data-activates="mobile-demo" class="button-collapse" style="padding-left: 5px">
        <i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down"> <!-- full web page -->
        {{#each navLinks}}
          <li><a href="{{link}}">{{linkText}}</a></li>
        {{/each}}
      </ul>
      <ul class="side-nav" id="mobile-demo"> <!-- mobile -->
        <br>
        <br>
        {{#each navLinks}}
          <li><a href="{{link}}">{{linkText}}</a></li>
        {{/each}}
      </ul>
    </div>
  </nav>
  </div>  


<!-- profile-page-header -->
  <div id="profile-page-header" class="card">          
  <div class="card-content">
    <div class="row">                    
    <div class="col s12">     
      <center>                 
          <font size="5">{{currentUser.username}}</font>
          <br>
          <font size="2">{{currentUser.firstName}} {{currentUser.lastName}}</font>

          <figure class="card-profile-image">
            <img src="./images/profilepic.png" width="100" height="100"  class="circle responsive-img activator">
          </figure>

          <i class="material-icons" style="vertical-align: middle">assignment</i>{{currentUser.tasksMade}} Custom Tasks
      </center>                        
    </div>               
    </div>
  </div>
  </div>


    
    <!--activities list (new, collapsibles) --> 
  <ul class="collapsible" data-collapsible="accordion">
    {{#each featuredTasks}}
    {{#if isDone}}
    <li >
      <div class="collapsible-header" style="padding: .5rem 1rem">   
        
        <img src="/images/{{icon}}.png" style="vertical-align: middle" height="35" width="35">  

        <span class="title" style="padding:8px"> {{title}} </span>
    

        <object class="material-icons secondary-content" style="padding-top:10px">keyboard_arrow_down</object>

      </div>

      <div class="collapsible-body">
      <!-- checkpoint list -->      
      <div class="row">
        <div class="col s12">
            
          <br>  
          <h6>{{description}}</h6>
          Checkpoints:
          <br>
          <br>
          <ul class="collection " id="checkpoints">

          {{#each checkpoints}}  
            <li class="collection-item" id="item_{{@index}}">{{checkpoint}}</li>
          {{/each}}
          </ul>

          <br>

          {{#each tags}}
          <a href="/tag/{{tag}}">
            <div class="chip">{{tag}}</div>
          </a>
          {{/each}}
            
          <a href="trackerCreator/{{title}}" class="btn waves-effect waves-light secondary-content" type="submit" name="action">Start</a>
            
      </div>      
          
      </div>  
      </div>
    </li>
    {{/if}}
    {{/each}}

  </ul> 
    

  <!--
  <br>
  <center>
  <div class="chip">Show more</div>
  </center>
  <br>
  -->
           

  <!-- Javascripts -->
  <script src="https://code.jquery.com/jquery.js"></script>
  <!--<script src="js/bootstrap.min.js"></script> -->
  <!-- Materialize js-->
  <script type="text/javascript" src="/js/materialize.min.js"></script>
  <!-- own js-->
  <script src="/js/progressTracker.js"></script>
